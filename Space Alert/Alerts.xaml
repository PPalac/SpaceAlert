<Page
    x:Class="Space_Alert.Alerts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Space_Alert"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <Button x:Name="btnHelp" Content="HELP !" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="333" RenderTransformOrigin="0.5,0.5" Background="#CCFF0000" Click="btnHelp_Click" Foreground="White" FontSize="36"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="305" RenderTransformOrigin="0.5,0.5" Background="#9900FF00" Click="btnOK_Click" Foreground="White" FontSize="36">
        </Button>

    </StackPanel>
</Page>
